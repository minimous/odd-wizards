{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "app/**": {
      "excludeFiles": "**/node_modules/node-hid/**"
    }
  },
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "1",
      "SKIP_DOWNLOAD": "true",
      "npm_config_optional": "false",
      "npm_config_ignore_scripts": "true"
    }
  },
  "installCommand": "npm ci --ignore-scripts && node scripts/remove-node-hid.js"
}
